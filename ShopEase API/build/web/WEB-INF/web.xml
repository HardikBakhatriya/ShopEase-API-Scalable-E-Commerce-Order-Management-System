<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CreateOrderServlet</servlet-name>
        <servlet-class>controller.CreateOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RetrieveOrderServlet</servlet-name>
        <servlet-class>controller.RetrieveOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateOrderServlet</servlet-name>
        <servlet-class>controller.UpdateOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteOrderServlet</servlet-name>
        <servlet-class>controller.DeleteOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddOrderItemServlet</servlet-name>
        <servlet-class>controller.AddOrderItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateOrderItemServlet</servlet-name>
        <servlet-class>controller.UpdateOrderItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteOrderItemServlet</servlet-name>
        <servlet-class>controller.DeleteOrderItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateOrderServlet</servlet-name>
        <url-pattern>/CreateOrderServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RetrieveOrderServlet</servlet-name>
        <url-pattern>/RetrieveOrderServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateOrderServlet</servlet-name>
        <url-pattern>/UpdateOrderServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteOrderServlet</servlet-name>
        <url-pattern>/DeleteOrderServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddOrderItemServlet</servlet-name>
        <url-pattern>/AddOrderItemServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateOrderItemServlet</servlet-name>
        <url-pattern>/UpdateOrderItemServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteOrderItemServlet</servlet-name>
        <url-pattern>/DeleteOrderItemServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
